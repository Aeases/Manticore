{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build .mrpack file",
            "type": "shell",
            "command": "packwiz modrinth export && mkdir builds || mv ./Manticore*.mrpack ./builds/",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
              },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        }
    ]
}